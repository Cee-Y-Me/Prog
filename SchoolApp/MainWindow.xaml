            <Label HorizontalContentAlignment="Left" Foreground="White" FontWeight="Bold" VerticalContentAlignment="Center" FontSize="12" Content="Label1" HorizontalAlignment="Left" Height="30" Margin="79,170,0,0" VerticalAlignment="Top" Width="406"/>
